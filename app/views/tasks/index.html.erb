<style>
  table, td, th { border: 1px black solid }
</style>

<h1>タスク一覧</h1>
<p><%= link_to '新規作成', new_task_path %></p>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th>
        <%= Task.human_attribute_name(:deadline_on) %>
        <% if !(params[:column] == 'deadline_on' && params[:direction] == 'asc') %>
          <%= link_to '⬆︎', { column: 'deadline_on', direction: 'asc'} %>
        <% end %>
        <% if !(params[:column] == 'deadline_on' && params[:direction] == 'desc') %>
          <%= link_to '⬇︎', { column: 'deadline_on', direction: 'desc'} %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.deadline_on %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: t('tasks.data.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
