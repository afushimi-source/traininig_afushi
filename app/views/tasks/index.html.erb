<style>
  a.link_disabled { pointer-events: none; text-decoration: none; color: black }
  a.link_enabled { color: silver }
  div.search { display: flex }
</style>

<h1>タスク一覧</h1>
<p><%= link_to '新規作成', new_task_path %></p>

<div class='search'>
  <%= form_with(url: tasks_path, method: :get, local: true) do |f| %>
    <%= f.hidden_field :column, :value => params[:column] %>
    <%= f.hidden_field :direction, :value =>  params[:direction] %>
    <%= f.text_field :term, :value => params[:term] %>
    <%= f.submit '検索' %>
  <% end %>
  <%= form_with(url: tasks_path, method: :get, local: true) do |f| %>
    <%= f.hidden_field :column, :value => params[:column] %>
    <%= f.hidden_field :direction, :value =>  params[:direction] %>
    <%= f.hidden_field :term, :value => '' %>
    <%= f.submit 'クリア' %>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= Task.human_attribute_name(:title) %></th>
      <th scope="col">
        <%= Task.human_attribute_name(:priority) %>
        <% if !(params[:column] == 'priority' && params[:direction] == 'asc') %>
          <%= link_to '⬆︎', { column: 'priority', direction: 'asc', term: params[:term] } %>
        <% end %>
        <% if !(params[:column] == 'priority' && params[:direction] == 'desc') %>
          <%= link_to '⬇︎', { column: 'priority', direction: 'desc', term: params[:term]} %>
        <% end %>
      </th>
      <th scope="col">
        <%= Task.human_attribute_name(:deadline_on) %>
        <% if !(params[:column] == 'deadline_on' && params[:direction] == 'asc') %>
          <%= link_to '⬆︎', { column: 'deadline_on', direction: 'asc', term: params[:term] } %>
        <% end %>
        <% if !(params[:column] == 'deadline_on' && params[:direction] == 'desc') %>
          <%= link_to '⬇︎', { column: 'deadline_on', direction: 'desc', term: params[:term]} %>
        <% end %>
      </th>
      <th scope="col"><%= Task.human_attribute_name(:status) %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= task.deadline_on %></td>
        <td>
          <%= generate_status_link('未着手', task) %>
          <%= generate_status_link('着手中', task) %>
          <%= generate_status_link('完了', task) %>
        </td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: t('tasks.data.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks -%>
