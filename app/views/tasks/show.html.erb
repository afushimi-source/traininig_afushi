<style>
.col-sm-3, .col-sm-9 { margin-bottom: 15px; padding: 5px }
.btn { margin-bottom: 15px}
</style>

<h1>タスク詳細</h1>
<dl class="row">
  <dt class="col-sm-3 bg-light"><%= Task.human_attribute_name(:title) %></dt>
  <dd class="col-sm-9"><%= @task.title %></dd>
  <dt class="col-sm-3 bg-light"><%= Task.human_attribute_name(:priority) %>
  <dd class="col-sm-9"><%= @task.priority %></dd>
  <dt class="col-sm-3 bg-light"><%= Task.human_attribute_name(:deadline_on) %></dt>
  <dd class="col-sm-9"><%= @task.deadline_on %></dd>
  <dt class="col-sm-3 bg-light"><%= Task.human_attribute_name(:description) %></dt>
  <dd class="col-sm-9"><%= @task.description %></dd>
</dl>
<%= link_to '編集する', edit_task_path(@task, take_params), class: 'btn btn-primary' %>
<br>
<%= link_to "戻る", tasks_path(take_params), class: 'btn btn-info' %>
